                        var parentNode = elem.parentNode;
                        var successElem = document.createElement('span');
                        successElem.innerHTML = '已投票';
                        parentNode.removeChild(elem);
                        parentNode.appendChild(successElem);
                    }
                });
            }
        })()
    </script>
</div>




    


