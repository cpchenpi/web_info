        var add2CartBtn = $(this).find('.add2cart');
        var inCartHint = $(this).find('.book-in-cart');
        var deleteBtn = inCartHint.find('.delete-cart-item');

        deleteBtn.click(function(e) {
          e.preventDefault();
          $.post_withck('/cart', {remove: this.rel}, function() {
            add2CartBtn.show();
            inCartHint.hide();
          });
        });
      });
    });
