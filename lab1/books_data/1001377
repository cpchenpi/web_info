        reportTrack(itmbUrl)
      }
    })
  })

  function track(url) {
    reportTrack(url)
  }

  function reportTrack(url) {
    if (!url) { return false }
    $.ajax({ url: url, dataType: 'text/html' })
  }
</script>













  
    






  

