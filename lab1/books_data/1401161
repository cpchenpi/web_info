        var mbtUrl = e.target.dataset.track
        reportTrack(mbtUrl)
      })
      $('#click_track_market_cart').click(function(e){
        var mctUrl = e.target.dataset.track
        reportTrack(mctUrl)
      })
      function reportTrack(url) {
        if (!url) return false
        $.ajax({ url: url, dataType: 'text/html' })
      }
    })
  </script>


  





