  <div class="content clearfix">
      
      <dl class="">
        <dt>
            <a href="https://book.douban.com/subject/1045818/" onclick="moreurl(this, {'total': 10, 'clicked': '1045818', 'pos': 0, 'identifier': 'book-rec-books'})"><img class="m_sub_img" src="https://img2.doubanio.com/view/subject/s/public/s2153661.jpg"/></a>
        </dt>
        <dd>
          <a href="https://book.douban.com/subject/1045818/" onclick="moreurl(this, {'total': 10, 'clicked': '1045818', 'pos': 0, 'identifier': 'book-rec-books'})" class="">
            苏菲的世界
          </a>
          <span class="subject-rate">8.6</span>
        </dd>
      </dl>
      
