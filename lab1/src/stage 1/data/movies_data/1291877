                    $source.remove();
                }
            });
            var sources = {};
            sources[8] = [
                        {play_link: "https://www.douban.com/link2/?url=https%3A%2F%2Fm.bilibili.com%2Fbangumi%2Fplay%2Fss45022%3Fbsource%3Ddoubanh5&amp;subtype=8&amp;type=online-video&amp;link2key=e8bb18f74e", ep: "1"},
