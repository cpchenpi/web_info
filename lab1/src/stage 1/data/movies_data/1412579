                var $this = $(e.target),
                    $source = $('.play-source');
                if (!$this.is('.playBtn') && !$this.parents('.play-source').length) {
                    $source.remove();
                }
            });
            var sources = {};
            sources[3] = [
                        {play_link: "https://www.douban.com/link2/?url=https%3A%2F%2Fv.youku.com%2Fv_show%2Fid_XMTk5NDIzMDY4.html%3Fspm%3Da2h0c.8166622.PhoneSokuProgramSeries_1.dtitle_2&amp;subtype=3&amp;type=online-video", ep: "1"},
