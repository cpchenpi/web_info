        $(function(){
            $(document).on('click', '.cross span', function(e) {
                var $this = $(this);
                var $dialog = $this.parents('#tv-play-source');
                $dialog.remove();
            });
            $('body').bind('click', function(e) {
                var $this = $(e.target),
                    $source = $('.play-source');
                if (!$this.is('.playBtn') && !$this.parents('.play-source').length) {
                    $source.remove();
                }
            });
            var sources = {};
            sources[1] = [
                        {play_link: "https://www.douban.com/link2/?url=https%3A%2F%2Fv.qq.com%2Fx%2Fcover%2Fmxwqna0wtgezxzk.html%3Fptag%3Dnewdouban.movie&amp;subtype=1&amp;type=online-video", ep: "1"},
            ];
            $('.playBtn').each(function(i, item) {
                // 曝光监测上报
                if (item) {
                    reportTrack(item.dataset.impressionTrack);
                }
            });
