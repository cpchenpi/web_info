              window.DOUBAN_VENDORS.openReportModal({
                reportUrl: "" || root.getAttribute('data-url'),
                types: ["content"]
              })
            }
          });
          root.appendChild(btn);
        })
      }
      ADD_REPORT();
      window.ADD_REPORT = ADD_REPORT;
    })()
