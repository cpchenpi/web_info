                    $source.remove();
                }
            });
            var sources = {};
            sources[1] = [
                        {play_link: "https://www.douban.com/link2/?url=https%3A%2F%2Fv.qq.com%2Fx%2Fcover%2Fkg2bt65pr2p50b0.html%3Fptag%3Dnewdouban.movie&amp;subtype=1&amp;type=online-video", ep: "1"},
