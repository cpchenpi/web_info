                var $this = $(e.target),
                    $source = $('.play-source');
                if (!$this.is('.playBtn') && !$this.parents('.play-source').length) {
                    $source.remove();
                }
            });
            var sources = {};
            sources[15] = [
                        {play_link: "https://www.douban.com/link2/?url=https%3A%2F%2Fm.miguvideo.com%2Fmgs%2Fmsite%2Fprd%2Fdetail.html%3Fcid%3D659236772%26pwId%3Dd01197d3076b4164af82983c408bb996&amp;subtype=15&amp;type=online-video&amp;link2key=fc238406c6", ep: "1"},
