                    $(this).find(".comment-report").css('visibility', 'visible');
                    break;
                    case "mouseleave":
                    $(this).find(".comment-report").css('visibility', 'hidden');
                    break;
                }
            });
        })()
    </script>

        </div>




                
                    &gt; <a href="comments?sort=new_score&status=P" >
                        更多短评
                            146237条
                    </a>
        </div>
