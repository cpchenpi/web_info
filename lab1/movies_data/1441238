                    $(this).find(".comment-report").css('visibility', 'hidden');
                    break;
                }
            });
        })()
    </script>

        </div>




                
                    &gt; <a href="comments?sort=new_score&status=P" >
                        更多短评
                            52191条
                    </a>
        </div>
