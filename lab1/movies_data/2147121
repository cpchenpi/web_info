            $(this).hide();
        }).appendTo($actor_attr);

        $actor_attr.find('span').eq(4).nextAll('span').hide();
    }
})

$(function(){
    $(".episode_list").delegate(".ep_more","click",function(){
        $(".episode_list").find(".hide").css("display","inline-block");
        $(this).hide();
        return false;
    })
})
</script>
        
        
