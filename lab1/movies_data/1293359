                var $this = $(e.target),
                    $source = $('.play-source');
                if (!$this.is('.playBtn') && !$this.parents('.play-source').length) {
                    $source.remove();
                }
            });
            var sources = {};
            sources[1] = [
                        {play_link: "https://www.douban.com/link2/?url=https%3A%2F%2Fv.qq.com%2Fx%2Fcover%2Fbdbcer5v3qcjioz.html%3Fptag%3Dnewdouban.movie&amp;subtype=1&amp;type=online-video", ep: "1"},
            ];
