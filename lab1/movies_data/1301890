                    window.location = "/subject/" + subjectId + "/";
                    // fix null state bug in Safari
                    if (isSafari) {
                        window.history.pushState &&
                          window.history.pushState(null, document.title, window.location.href)
                    }
                }
            });
            $("#season").val("1301890")

