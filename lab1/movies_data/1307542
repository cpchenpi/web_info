                $(function () {
                    if (window.SUBJECT_COMMENTS_SECTION) {
                        // tab handler
                        SUBJECT_COMMENTS_SECTION.createTabHandler();
                        // expand handler
                        SUBJECT_COMMENTS_SECTION.createExpandHandler({
                            root: document.getElementById('comments-section'),
                        });
