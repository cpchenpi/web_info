          if (!url) { return false }
          $.ajax({ url: url, dataType: 'text/html' })
        }
        $(function(){
            $(document).on('click', '.cross span', function(e) {
                var $this = $(this);
                var $dialog = $this.parents('#tv-play-source');
                $dialog.remove();
            });
            $('body').bind('click', function(e) {
                var $this = $(e.target),
                    $source = $('.play-source');
                if (!$this.is('.playBtn') && !$this.parents('.play-source').length) {
                    $source.remove();
                }
            });
            var sources = {};
            sources[9] = [
                        {play_link: "https://www.douban.com/link2/?url=http%3A%2F%2Fwww.iqiyi.com%2Fv_19rrjcib0s.html%3Fvfm%3Dm_331_dbdy%26fv%3D4904d94982104144a1548dd9040df241&amp;subtype=9&amp;type=online-video", ep: "1"},
            ];
