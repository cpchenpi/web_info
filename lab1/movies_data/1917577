        function reportTrack(url) {
          if (!url) { return false }
          $.ajax({ url: url, dataType: 'text/html' })
        }
        $(function(){
            $(document).on('click', '.cross span', function(e) {
                var $this = $(this);
                var $dialog = $this.parents('#tv-play-source');
                $dialog.remove();
            });
            $('body').bind('click', function(e) {
                var $this = $(e.target),
                    $source = $('.play-source');
                if (!$this.is('.playBtn') && !$this.parents('.play-source').length) {
                    $source.remove();
                }
            });
            var sources = {};
            sources[7] = [
                        {play_link: "https://www.douban.com/link2/?url=http%3A%2F%2Fwww.mgtv.com%2Fb%2F560345%2F19368221.html%3Fcxid%3Dvb4rv4jhk&amp;subtype=7&amp;type=online-video", ep: "1"},
            ];
            sources[13] = [
                        {play_link: "https://www.douban.com/link2/?url=http%3A%2F%2Fvip.1905.com%2Fplay%2F478088.shtml%3F__hz%3D6e0721b2c6977135%26api_source%3Ddouban_vodadd&amp;subtype=13&amp;type=online-video", ep: "1"},
            ];
